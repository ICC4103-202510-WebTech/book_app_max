<h1>Authors</h1>

<div class="mb-3">
  <%= link_to "New Author", new_author_path, class: "btn btn-primary" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Birth Year</th>
      <th scope="col">Books Count</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <th scope="row"><%= author.id %></th>
        <td><%= author.first_name %></td>
        <td><%= author.last_name %></td>
        <td><%= author.birth %></td>
        <td><%= author.books.count %></td>
        <td>
          <%= link_to "Show", author_path(author), class: "btn btn-sm btn-info" %>
          <%= link_to "Edit", edit_author_path(author), class: "btn btn-sm btn-warning" %>
          <%= link_to "Delete", author_path(author), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
