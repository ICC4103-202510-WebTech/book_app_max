<h1>New Author</h1>

<%= form_with(model: @author, local: true) do |form| %>

  <div class="mb-3">
    <%= form.label :first_name, class: "form-label" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :last_name, class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :birth, "Birth Year", class: "form-label" %>
    <%= form.number_field :birth, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Create Author", class: "btn btn-primary" %>
    <%= link_to "Back to Authors", authors_path, class: "btn btn-secondary" %>
  </div>
<% end %>
